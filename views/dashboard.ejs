<!DOCTYPE html>
<html lang="vi">
<head>
  <%- include('partials/layout/head') %>
  <!-- Sidebar shared styles -->
  <%- include('partials/layout/sidebar-styles') %>
  <%- include('partials/dashboard/styles') %>
</head>
<body>
  <%- include('partials/layout/sidebar', { currentPage: 'dashboard' }) %>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Page Header -->
    <div class="page-header">
      <h1><i class="fas fa-building"></i> Quản lý phòng</h1>
    </div>

    <!-- Alerts -->
    <!-- Hidden data for toast notifications -->
    <% if (typeof success !== "undefined" && success) { %>
      <input type="hidden" id="successMessage" value="<%= success %>">
    <% } %>

    <% if (typeof error !== "undefined" && error) { %>
      <input type="hidden" id="errorMessage" value="<%= error %>">
    <% } %>

    <!-- Dashboard Grid Layout -->
    <div class="dashboard-grid">
      <%- include('partials/dashboard/components/left-column') %>
      <%- include('partials/dashboard/components/right-column') %>
          </div>
        </div>

  <%- include('partials/dashboard/modals') %>
  
  <!-- Shared Toast Container -->
  <%- include('partials/shared/components/toast-container') %>
  
  <%- include('partials/dashboard/scripts') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Shared Toast System -->
  <%- include('partials/shared/styles/toast-styles') %>
  <%- include('partials/shared/scripts/toast-manager') %>
  
</body>
</html>