    // ==================== FEEDBACK FUNCTIONS ====================
    
    // Guard flag to prevent multiple initialization
    let feedbackSystemInitialized = false;
    
    // Initialize feedback system - delegated to realtime-feedback.ejs
    async function initializeFeedbackSystem() {
      // Prevent multiple initialization
      if (feedbackSystemInitialized) {
        return;
      }
      
      feedbackSystemInitialized = true;
      
      // Feedback realtime is now handled by RealtimeFeedbackUpdater
    }
    
    // Cleanup feedback listener
    function cleanupFeedbackListener() {
      if (feedbackListener && feedbackRef) {
        feedbackRef.off('value', feedbackListener);
        feedbackListener = null;
      }
    }
    
