<!-- Modal Water Leak Warning -->
<div class="modal fade" id="waterLeakWarningModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg">
      <div class="modal-header bg-info text-white">
        <h5 class="modal-title fw-bold">
          <i class="fas fa-exclamation-triangle"></i> 
          CẢNH BÁO RÒ RỈ NƯỚC
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center p-4">
        <div class="alert alert-info mb-4" role="alert">
          <i class="fas fa-tint fa-2x text-primary mb-2"></i>
          <h6 class="fw-bold mb-2">CẢNH BÁO RÒ RỈ!</h6>
          <p class="mb-0" id="waterLeakMessage">
            Phòng <span id="waterLeakRoomNumber"></span> đang bị rò rỉ nước!
          </p>
        </div>
        
        <div class="row text-center mb-3">
          <div class="col-12">
            <div class="p-3 bg-light rounded">
              <h6 class="text-muted mb-1">Trạng thái hệ thống</h6>
              <span class="h4 text-danger fw-bold">PHÁT HIỆN RÒ RỈ</span>
            </div>
          </div>
        </div>
        
        <div class="alert alert-warning" role="alert">
          <i class="fas fa-info-circle"></i>
          <strong>Khuyến nghị:</strong> Vui lòng kiểm tra ngay hệ thống nước và đóng van chính để tránh thiệt hại.
        </div>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-info" data-bs-dismiss="modal" onclick="acknowledgeWaterLeakWarning()">
          <i class="fas fa-check"></i> Đã hiểu
        </button>
      </div>
    </div>
  </div>
</div> 