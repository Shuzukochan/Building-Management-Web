<!-- Modal Send Notification -->
<div class="modal fade" id="sendNotificationModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title"><i class="fas fa-bell"></i> Gửi thông báo</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          <strong>Gửi thông báo tới:</strong> <span id="notificationRoomInfo"></span>
        </div>
        
        <div class="mb-3">
          <label for="notificationTitle" class="form-label"><strong>Tiêu đề thông báo:</strong></label>
          <input type="text" class="form-control" id="notificationTitle" value="Quản lí toà nhà" placeholder="VD: Thông báo về tiền phòng" required>
        </div>
        
        <div class="mb-3">
          <label for="notificationMessage" class="form-label"><strong>Nội dung thông báo:</strong></label>
          <textarea class="form-control" id="notificationMessage" rows="5" placeholder="Nhập nội dung thông báo..." required></textarea>
          <div class="form-text">Tối đa 500 ký tự</div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times"></i> Hủy
        </button>
        <button type="button" class="btn btn-primary" onclick="sendNotification()">
          <i class="fas fa-paper-plane"></i> Gửi thông báo
        </button>
      </div>
    </div>
  </div>
</div> 