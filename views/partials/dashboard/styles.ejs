    }
    
    .node-type {
      font-weight: 600;
      font-size: 0.85em;
      text-transform: uppercase;
    }
    
    .node-electricity .node-type {
      color: #92400e;
    }
    
    .node-water .node-type {
      color: #0e7490;
    }
    
    .node-status {
      font-size: 0.75em;
      padding: 2px 6px;
      border-radius: 8px;
      background: #10b981;
      color: white;
    }
    
    .node-id {
      font-family: monospace;
      font-size: 0.85em;
      background: white;
      padding: 4px 6px;
      border-radius: 4px;
      margin-bottom: 4px;
      font-weight: 500;
    }
    
    .node-reading {
      font-size: 0.8em;
      color: #6b7280;
      font-weight: 500;
    }
    
    .add-node-form {
      display: flex;
      gap: 4px;
      margin-top: 5px;
    }
    
    .add-node-form input {
      font-size: 0.85em;
      padding: 5px 7px;
    }
    
    .add-node-form button {
      font-size: 0.85em;
      padding: 5px 9px;
    }
    
    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 3px;
    }
    
    .action-buttons .btn {
      font-size: 0.8em;
      padding: 4px 7px;
    }
    
    .alert {
      border-radius: 6px;
      border: none;
      padding: 8px 12px;
      margin-bottom: 10px;
      font-size: 0.9em;
    }
    
    .btn-gradient {
      background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
      border: none;
      color: white;
    }
    
    .btn-gradient:hover {
      background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
      color: white;
    }
    
    .phone-select-container {
      position: relative;
    }
    
