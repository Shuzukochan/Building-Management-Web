<!-- Building Management Card -->
<div class="card fade-in">
  <div class="card-header bg-success text-white">
    <h5 class="card-title mb-0"><i class="fas fa-building me-2"></i>Quản lý Tòa nhà</h5>
  </div>
  <div class="card-body">
    <div class="card-padded-content">
      <h6 class="fw-bold"><i class="fas fa-plus-circle me-2"></i>Thêm Tòa nhà Mới</h6>
      <form id="addBuildingForm" class="mb-4">
        <div class="mb-3">
          <label for="buildingName" class="form-label">Tên tòa nhà</label>
          <input type="text" class="form-control" id="buildingName" placeholder="Ví dụ: Tòa nhà C" required>
        </div>
        <button type="submit" class="btn btn-success w-100">Thêm Tòa nhà</button>
      </form>
    </div>
    
    <h6 class="fw-bold mt-4 card-padded-content"><i class="fas fa-list-ul me-2"></i>Danh sách Tòa nhà</h6>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead>
          <tr>
            <th class="text-center" style="width: 15%;">ID</th>
            <th class="text-center" style="width: 35%;">Tên</th>
            <th class="text-center" style="width: 15%;">Số phòng</th>
            <th class="text-center" style="width: 15%;">Số admin</th>
            <th class="text-center" style="width: 20%;">Thao tác</th>
          </tr>
        </thead>
        <tbody id="buildingsTableBody">
          <!-- Building rows will be populated here -->
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Admin Management Card -->
<div class="card fade-in">
  <div class="card-header bg-primary text-white">
    <h5 class="card-title mb-0"><i class="fas fa-user-shield me-2"></i>Quản lý Admin</h5>
  </div>
  <div class="card-body">
    <div class="card-padded-content">
      <h6 class="fw-bold"><i class="fas fa-user-plus me-2"></i>Thêm Admin Mới</h6>
      <form id="addAdminForm" class="mb-4">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="adminUsername" class="form-label">Tên đăng nhập</label>
            <input type="text" class="form-control" id="adminUsername" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="adminPassword" class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" id="adminPassword" required>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="adminRole" class="form-label">Vai trò</label>
            <select class="form-select" id="adminRole">
              <option value="admin">Admin</option>
              <option value="super_admin">Super Admin</option>
            </select>
          </div>
          <div class="col-md-6 mb-3">
            <label for="adminBuildings" class="form-label">Chọn tòa nhà</label>
            <select class="form-select" id="adminBuildings">
              <!-- Options will be loaded by JS -->
            </select>
          </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Tạo tài khoản</button>
      </form>
    </div>

    <h6 class="fw-bold mt-4 card-padded-content"><i class="fas fa-users-cog me-2"></i>Danh sách Admin</h6>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead>
          <tr>
            <th class="text-center" style="width: 20%;">Tài khoản</th>
            <th class="text-center" style="width: 20%;">Vai trò</th>
            <th class="text-center" style="width: 40%;">Tòa nhà Phụ trách</th>
            <th class="text-center" style="width: 20%;">Thao tác</th>
          </tr>
        </thead>
        <tbody id="adminsTableBody">
          <!-- Data will be loaded by JS -->
        </tbody>
      </table>
    </div>
  </div>
</div> 