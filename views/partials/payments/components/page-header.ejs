<!-- Page Header -->
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <h1><i class="fas fa-money-bill-wave"></i> Quản lí thanh toán tháng <%= currentMonth %></h1>
    <div class="month-selector">
      <select class="form-select" id="monthSelector" onchange="changeMonth(this.value)">
        <option value="<%= currentMonthKey %>"><%= currentMonth %>/<%= currentYear %></option>
        <!-- Các tháng khác sẽ được thêm bằng JavaScript -->
      </select>
    </div>
  </div>
</div> 