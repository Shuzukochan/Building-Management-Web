<!-- Statistics Grid -->
<div class="stats-grid">
  <div class="stat-card total">
    <div class="stat-header">
      <div class="stat-title">Tổng phòng</div>
      <div class="stat-icon">
        <i class="fas fa-door-open"></i>
      </div>
    </div>
    <div class="stat-value"><%= stats.totalRooms %></div>
    <div class="stat-subtitle">Phòng đang có người thuê</div>
  </div>
  
  <div class="stat-card paid">
    <div class="stat-header">
      <div class="stat-title">Đã thanh toán</div>
      <div class="stat-icon">
        <i class="fas fa-check-circle"></i>
      </div>
    </div>
    <div class="stat-value"><%= stats.paidRooms %></div>
    <div class="stat-subtitle">Tỷ lệ: <%= stats.paymentRate %>%</div>
  </div>
  
  <div class="stat-card overdue">
    <div class="stat-header">
      <div class="stat-title">Quá hạn</div>
      <div class="stat-icon">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
    </div>
    <div class="stat-value"><%= stats.overdueRooms || 0 %></div>
    <div class="stat-subtitle">Cần thu gấp</div>
  </div>
  
  <div class="stat-card revenue">
    <div class="stat-header">
      <div class="stat-title">Tổng thu</div>
      <div class="stat-icon">
        <i class="fas fa-coins"></i>
      </div>
    </div>
    <div class="stat-value"><%= parseInt(stats.totalRevenue).toLocaleString('vi-VN') %>đ</div>
    <div class="stat-subtitle">Tiền mặt: <%= parseInt(stats.cashRevenue || 0).toLocaleString('vi-VN') %>đ | Chuyển khoản: <%= parseInt(stats.transferRevenue || 0).toLocaleString('vi-VN') %>đ</div>
  </div>
</div> 