<!-- Page Header -->
<div class="page-header">
  <div class="d-flex justify-content-between align-items-center">
    <h1><i class="fas fa-cog"></i> Hiệu chỉnh hệ thống</h1>
    <div>
      <% if (admin?.role === 'super_admin' && buildings) { %>
        <select class="form-select building-selector" id="buildingSelector">
          <% for (const [buildingId, building] of Object.entries(buildings)) { %>
            <option value="<%= buildingId %>" <%= buildingId === selectedBuildingId ? 'selected' : '' %>>
              <%= building.name %>
            </option>
          <% } %>
        </select>
      <% } %>
    </div>
  </div>
</div> 