<!-- Modal Hiệu chuẩn sai số điện -->
<div class="modal fade" id="electricErrorCorrectionModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-adjust"></i> Hiệu chuẩn sai số - Cảm biến điện
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          <strong>Hướng dẫn:</strong>
          <ul class="mb-0 mt-2">
            <li>Cần có dữ liệu hiệu chuẩn ban đầu trước khi thực hiện</li>
            <li>Nhập giá trị cảm biến và đồng hồ hiện tại</li>
            <li>Hệ thống sẽ tính toán lại hệ số và offset</li>
          </ul>
        </div>

        <!-- Hiển thị thông tin hiệu chuẩn ban đầu -->
        <div class="alert alert-light border mb-4">
          <h6><i class="fas fa-info-circle"></i> Thông tin hiệu chuẩn ban đầu:</h6>
          <div class="row">
            <div class="col-md-3">
              <strong>Giá trị cảm biến ban đầu:</strong><br>
              <span id="electricErrorFirstSensorValue">-</span>
            </div>
            <div class="col-md-3">
              <strong>Giá trị đồng hồ ban đầu:</strong><br>
              <span id="electricErrorFirstActualValue">-</span>
            </div>
            <div class="col-md-3">
              <strong>Offset hiện tại:</strong><br>
              <span id="electricErrorCurrentOffset">-</span>
            </div>
            <div class="col-md-3">
              <strong>Calibration Factor hiện tại:</strong><br>
              <span id="electricErrorCurrentCalibrationFactor">-</span>
            </div>
          </div>
        </div>

        <form id="electricErrorCorrectionForm">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="electricErrorCurrentSensorValue" class="form-label">
                  <strong>Giá trị cảm biến hiện tại:</strong>
                </label>
                <div class="input-group">
                  <input type="number" class="form-control" id="electricErrorCurrentSensorValue" 
                         step="0.01" min="0" placeholder="0.0000" required>
                  <span class="input-group-text">kWh</span>
                </div>
                <div class="form-text">Giá trị hiển thị trên cảm biến điện hiện tại</div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group mb-3">
                <label for="electricErrorCurrentMeterValue" class="form-label">
                  <strong>Giá trị đồng hồ hiện tại:</strong>
                </label>
                <div class="input-group">
                  <input type="number" class="form-control" id="electricErrorCurrentMeterValue" 
                         step="0.01" min="0" placeholder="0.0000" required>
                  <span class="input-group-text">kWh</span>
                </div>
                <div class="form-text">Giá trị thực tế từ đồng hồ điện cơ hiện tại</div>
              </div>
            </div>
          </div>

          <!-- Preview kết quả -->
          <div id="electricErrorPreview" class="calibration-result" style="display: none;">
            <h6><i class="fas fa-calculator"></i> Kết quả tính toán mới:</h6>
            <div class="result-item">
              <span class="result-label">Calibration Factor mới:</span>
              <span class="result-value" id="electricErrorNewCalibrationFactor">1.0000</span>
            </div>
            <div class="result-item">
              <span class="result-label">Offset mới:</span>
              <span class="result-value" id="electricErrorNewOffset">0.0000</span>
            </div>
            <div class="result-item">
              <span class="result-label">Công thức Calibration Factor:</span>
              <span class="result-value" id="electricErrorCalibrationFormula">-</span>
            </div>
            <div class="result-item">
              <span class="result-label">Công thức Offset:</span>
              <span class="result-value" id="electricErrorOffsetFormula">-</span>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times"></i> Hủy
        </button>
        <button type="button" class="btn btn-success" onclick="submitElectricErrorCorrection()">
          <i class="fas fa-save"></i> Lưu hiệu chuẩn sai số
        </button>
      </div>
    </div>
  </div>
</div>

